<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="miw.dasm.inigo.genderguesser.ShowSavedMaleNames">
    <ImageView
        android:id="@+id/male_icon"
        android:src="@drawable/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/male_names"
        android:id="@+id/male_name_title"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_below="@+id/male_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
    <ListView
        android:id="@+id/male_name_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/male_name_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp">
    </ListView>
</RelativeLayout>
